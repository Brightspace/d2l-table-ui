{
  "name": "d2l-table",
  "description": "Mixins and CSS for applying table styles",
  "private": true,
  "scripts": {
    "clean": "rimraf test/acceptance/dumps/* reports/",
    "postinstall": "bower install",
    "predump": "npm run -s clean",
    "dump": "gulp dump:galen",
    "test": "concurrently -p name -n lint:js,lint:wc,galen,wct \"npm run test:lint:js\" \"npm run test:lint:wc\" \"npm run test:galen:local\" \"wct --skip-plugin sauce\"",
    "test:lint:js": "eslint --ext html .",
    "test:lint:wc": "polylint --no-recursion --input *.html",
    "test:galen:local": "gulp test:galen:local",
    "test:galen:sauce": "gulp test:galen:sauce"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Brightspace/d2l-table-ui.git"
  },
  "keywords": [
    "d2l",
    "polymer",
    "table"
  ],
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "dependencies": {
    "bower": "^1.7.7"
  },
  "devDependencies": {
    "@d2l/gulp-d2l-galen": "0.0.3",
    "concurrently": "^3.1.0",
    "eslint": "^3.7.1",
    "eslint-config-brightspace": "^0.2.4",
    "eslint-plugin-html": "^1.5.3",
    "galenframework": "^2.3.1",
    "gulp": "^3.9.1",
    "phantomjs-prebuilt": "^2.1.13",
    "polylint": "^2.10.1",
    "polymer-cli": "^0.16.0",
    "rimraf": "^2.5.4",
    "sauce-connect-launcher": "^0.17.0",
    "static-server": "^2.0.3",
    "web-component-tester": "^4.3.4"
  }
}
