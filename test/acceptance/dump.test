@@ import ../../galen.local.config.test

@@ Parameterized using browsers
Open simple.html in ${browserName}
	${browserFactory} ${endpoint} ${browserArgs}
		wait 1m until exist 'css: body'
		wait 1m until gone 'css: body[unresolved]'
		dump test/acceptance/table.gspec --name "D2L Table" --export test/acceptance/dumps/d2l-table

		open ${endpoint}?dir=rtl
		wait 1m until exist 'css: body'
		wait 1m until gone 'css: body[unresolved]'
		dump test/acceptance/table.rtl.gspec --name "D2L Table RTL" --export test/acceptance/dumps/d2l-table-rtl

		open ${demoEndpoint}
		wait 1m until exist 'css: body'
		wait 1m until gone 'css: body[unresolved]'
		dump test/acceptance/table.rtl.gspec --name "D2L Table Demo" --export test/acceptance/dumps/d2l-table-demo
