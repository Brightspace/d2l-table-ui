@import objects.gspec

@objects

	small-*               .screenshot-small
		head              thead
			content-*     span
		body              tbody
			content-*     span
		foot              tfoot
			content-*     span

	rows-*                .screenshot-rows
		content-*         span

	sort-*                .screenshot-sort
		content-*         span

	wide-*                .screenshot-wide
		content-*         span
		d2l-scroll-wrapper d2l-scroll-wrapper

	no-column-border-*    .screenshot-no-column-border
		head              thead
			content-*     span
		body              tbody
			content-*     span


@groups
	small            small-*.head,small-*.body,small-*.foot
	rows             rows-1,rows-2
	sort             sort-1,sort-2
	wide             wide-1,wide-2
	no-column-border no-column-border-*.head,no-column-border-*.body

== D2L Table ==

	@forEach [&small,&rows,&sort,&wide,&no-column-border] as part
		${part}.tr-1:
			aligned horizontally top ${part}

		@forEach [${part}.tr-*] as tr, prev as prevTr
			${tr}:
				below ${prevTr} 0px

	@forEach [&small,&rows,&no-column-border] as part
		@forEach [${part}.tr-*] as tr
			${tr}:
				image file dumps/${browserName}/objects/${tr}.png, ignore-objects [${part}.content-*], error 8px

	@forEach [&wide] as part
		@forEach [${part}.tr-*] as tr
			${tr}:
				image file dumps/${browserName}/objects/${tr}.png, ignore-objects [${part}.content-*], error 14px

	wide-1.d2l-scroll-wrapper:
		css border-right-style is "dashed"
		css border-right-width is "1px"
		css border-left-width is "0px"

	wide-2.d2l-scroll-wrapper:
		css border-left-style is "dashed"
		css border-left-width is "1px"
		css border-right-width is "0px"

	@forEach [&sort] as part
		${part}.sort-icon-*:
			# The 1px is to compensate for the border
			aligned horizontally centered ${part}.tr-1 1px

	small-1.head:
		above small-1.body 0px
		aligned horizontally top small-1

	small-1.body:
		above small-1.foot 0px

	small-1.foot:
		aligned horizontally bottom small-1

	small-2.head:
		above small-2.body 0px
		aligned horizontally top small-2

	small-2.body:
		above small-2.foot 0px

	small-2.foot:
		aligned horizontally bottom small-2
